<AnchorPane prefHeight="825.0" prefWidth="1001.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Alerts.Alert">
    <children>
        <AnchorPane prefHeight="111.0" prefWidth="1001.0" style="-fx-background-color: black;">
            <children>
                <ImageView fx:id="brandingImageView" fitHeight="114.0" fitWidth="149.0" layoutX="33.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/logo.png" />
                    </image>
                </ImageView>
                <Label layoutX="197.0" layoutY="47.0" text="Alerts" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <Label fx:id="alertLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="22.0" layoutY="133.0" prefHeight="206.0" prefWidth="948.0" />
        <VBox alignment="CENTER" layoutX="1.0" layoutY="115.0" prefHeight="710.0" prefWidth="1000.0" spacing="30.0">
            <children>
                <HBox alignment="CENTER" prefHeight="232.0" prefWidth="1000.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#cancel" prefHeight="41.0" prefWidth="322.0" text="Close">
                            <opaqueInsets>
                                <Insets bottom="10.0" />
                            </opaqueInsets>
                        </Button>
                  <Button mnemonicParsing="false" onAction="#viewAlert" prefHeight="41.0" prefWidth="322.0" text="Get Alerts">
                     <opaqueInsets>
                        <Insets bottom="10.0" />
                     </opaqueInsets>
                  </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
