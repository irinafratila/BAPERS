<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="769.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JobTasks.TaskDashboard">
    <children>
        <HBox alignment="CENTER" layoutX="2.0" prefHeight="205.0" prefWidth="997.0">
            <children>
                <Button mnemonicParsing="false" onAction="#changeSceneHome">
                    <graphic>
                        <Label prefHeight="44.0" prefWidth="218.0" text="Back to home">
                            <font>
                                <Font size="36.0" />
                            </font>
                        </Label>
                    </graphic></Button>
            </children>
        </HBox>
        <VBox alignment="CENTER" layoutX="-2.0" layoutY="252.0" prefHeight="517.0" prefWidth="1001.0" spacing="100.0">
            <children>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#changeSceneCreateTask" prefHeight="73.0" prefWidth="211.0" style="-fx-background-color: black; -fx-background-radius: 25;" text="Create Task" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Button>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#changeSceneUpdateTask" prefHeight="78.0" prefWidth="209.0" style="-fx-background-color: black; -fx-background-radius: 25;" text="Update Task" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#changeSceneDeleteTask" prefHeight="73.0" prefWidth="211.0" style="-fx-background-color: black; -fx-background-radius: 25;" text="Delete Task" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            </children>
        </VBox>
        <Label fx:id="actionMessage" alignment="CENTER" layoutX="328.0" layoutY="210.0" prefHeight="47.0" prefWidth="345.0" />
    </children>
</AnchorPane>
